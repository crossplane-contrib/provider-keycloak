{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "labels": [
    "renovatebot",
    "dependencies"
  ],
  "extends": [
    "config:recommended",
    ":semanticCommits",
    "helpers:pinGitHubActionDigests"
  ],
  "baseBranches": [
    "main"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "dependencyDashboard": true,
  "recreateWhen": "always",
  "packageRules": [
    {
      "groupName": "k8s.io dependencies",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "matchPackageNames": [
        "/^k8s\\.io//"
      ]
    },
    {
      "groupName": "sigs.k8s.io dependencies",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "matchPackageNames": [
        "/^sigs\\.k8s\\.io//"
      ]
    },
    {
      "groupName": "github.com/keycloak/terraform-provider-keycloak dependencies",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "matchPackageNames": [
        "/^github\\.com/keycloak/terraform-provider-keycloak/"
      ]
    },
    {
      "groupName": "github.com/hashicorp dependencies",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "matchPackageNames": [
        "/^github\\.com/hashicorp//"
      ]
    },
    {
      "groupName": "github.com/crossplane dependencies",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "matchPackageNames": [
        "/^github\\.com/crossplane//"
      ]
    },
    {
      "groupName": "github.com/alecthomas dependencies",
      "matchManagers": [
        "gomod"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "matchPackageNames": [
        "/^github\\.com/alecthomas//"
      ]
    },
    {
      "groupName": "github-actions",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^Makefile$"
      ],
      "matchStrings": [
        "export TERRAFORM_PROVIDER_VERSION ?= (?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "keycloak/terraform-provider-keycloak",
      "versioningTemplate": "semver"
    }
  ]
}
